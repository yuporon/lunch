<%= form_with(model: recruit) do |form| %>
  <% if recruit.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(recruit.errors.count, "error") %> prohibited this recruit from being saved:</h2>

      <ul>
        <% recruit.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :店名 %><br />
    <%= form.text_field :shop %>
  </div>

  <div class="field">
    <%= form.label :場所 %><br />
    <%= form.text_field :location %>
  </div>

  <div class="field">
    <%= form.label :一言 %><br />
    <%= form.text_area :content %>
  </div>

  <div class="field">
    <%= form.label :期日 %><br />
    <%= form.datetime_select :end_on %>
  </div>

  <div class="field">
    <%= form.label :ステータス %><br />
    <%= form.radio_button :status, :wanted %><%= form.label :募集中 %>
    <%= form.radio_button :status, :full %><%= form.label :満員 %>
    <%= form.radio_button :status, :done %><%= form.label :募集終了 %>
  </div>

  <div class="field">
    <%= form.label :画像 %><br />
    <%= image_tag(recruit.icon.variant(gravity: :center, resize:"100x100^", crop:"1000x100+0+0").processed) if recruit.icon.attached? %>
    <%= form.file_field :icon %>
  </div>


  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
