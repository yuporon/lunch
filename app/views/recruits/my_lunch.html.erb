<h2>ランチ募集一覧</h2>
<div id="new-recruit-link">
  <%= link_to '新規ランチ募集', new_recruit_path, class: 'hover btn btn-light' %>
</div>

<div class="row justify-content-evenly card_box">
  <% @recruits.each do |recruit| %>
    <% if recruit.owner_id == current_user.id %>
      <div class="card border-success mt-lg-3 mt-sm-5 col-sm-12 col-lg-5" style="padding: 0">
        <div class="card-header bg-success bg-gradient bg-opacity-25 fw-bolder fs-5"><%= recruit.shop %></div>
        <div class="row g-0">
          <div class="col-md-8">
            <div class="card-body">
              <p class="card-name">募集者：<%= recruit.owner.name %><p>
              <p>ご指名：<%= recruit.assigne.nil? ? "なし" : recruit.assigne.name%></p>
              <p class="card-text">期日：<%= recruit.end_on.strftime("%Y年%-m月%-d日 %-H時%-M分") %></p>
              <p class="card-text">ステータス：<%= recruit.status_i18n %></p>
              <div class="recruit-links">
                <%= link_to '詳細', recruit_path(recruit), class: 'btn btn-outline-secondary' %>
                <%= link_to '編集', edit_recruit_path(recruit), class: 'btn btn-outline-success' %>
                <%= link_to '削除', recruit, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-danger' %>
              </div>
            </div>
          </div>
          <div class="col-md-4 image_box">
            <%= image_tag(recruit.icon.variant(gravity: :center, resize:"130x130^", crop:"130x130+0+0").processed, style: "margin: auto;") if recruit.icon.attached? %>
          </div>
        </div>
      </div>
    <% elsif %>
      <div class="card border-danger mt-lg-3 mt-sm-5 col-sm-12 col-lg-5" style="padding: 0">
        <div class="card-header bg-danger bg-gradient bg-opacity-25 fw-bolder fs-4"><%= recruit.shop %></div>
        <div class="row g-0">
          <div class="col-md-8">
            <div class="card-body">
              <p class="card-name">募集者：<%= recruit.owner.name %></p>
              <p class="card-text">ご指名：<%= recruit.assigne.nil? ? "なし" : recruit.assigne.name%></p>
              <p class="card-text">期日：<%= recruit.end_on.strftime("%Y年%-m月%-d日 %-H時%-M分") %></p>
              <p class="card-text">ステータス：<%= recruit.status_i18n %></p>
              <div class="recruit-links">
                <%= link_to '詳細', recruit_path(recruit), class: 'btn btn-outline-secondary' %>
              </div>
            </div>
          </div>
          <div class="col-md-4 image_box">
            <%= image_tag(recruit.icon.variant(gravity: :center, resize:"130x130^", crop:"130x130+0+0").processed, style: "margin: auto;") if recruit.icon.attached? %>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
<div class="pagenate">
  <%= paginate @recruits %>
</div>
