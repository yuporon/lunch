<div class="row justify-content-center">
  <div class="card border-success mt-4 col-sm-12 col-lg-8" style="padding: 0">
    <div class="card-header bg-success bg-gradient bg-opacity-25 fw-bolder fs-4"><%= @recruit.shop %></div>
    <div class="row g-0">
      <div class="col-md-8">
        <div class="card-body">
          <p class="card-name">募集者：<%= @recruit.user.name %></h5>
          <p class="card-text">一言：<%= @recruit.content %></p>
          <p class="card-text">期日：<%= @recruit.end_on.strftime("%Y年%-m月%-d日 %-H時%-M分") %></p>
          <p class="card-text">ステータス：<%= @recruit.status_i18n %></p>
          <div class="recruit-links">
            <%= link_to 'Show', recruit_path(@recruit), class: 'btn btn-outline-secondary' %>
            <%= link_to 'Edit', edit_recruit_path(@recruit), class: 'btn btn-outline-success' %>
            <%= link_to 'Destroy', @recruit, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-danger' %>
          </div>
        </div>
      </div>
      <div class="col-md-4 image_box">
        <%= image_tag(@recruit.icon.variant(gravity: :center, resize:"130x130^", crop:"130x130+0+0").processed, style: "margin: auto;") if @recruit.icon.attached? %>
      </div>
    </div>
  </div>
</div>