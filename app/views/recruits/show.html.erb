<h2>ランチ募集詳細</h2>
<div class="row justify-content-center">
  <% if @recruit.owner_id == current_user.id %>
    <div class="card border-success mt-5 col-sm-12 col-lg-8" style="padding: 0">
      <div class="card-header bg-success bg-gradient bg-opacity-25 fw-bolder fs-4 flexcard">
        <%= @recruit.shop %>
        <% if !Favorite.exists?(user: current_user, recruit_id: @recruit.id) %>
          <%= link_to favorites_path(@recruit), method: :post, class: "favorite-btn favorite-recruit" do %>
            <div class="i far fa-thumbs-up">
              <span></span>
              <%= @recruit.favorites.length %>
            </div>
          <% end %>
        <% else %>
          <%= link_to favorite_path(@recruit), method: :delete, class: "favorite-btn favorite-delete" do %>
            <div class="i far fa-thumbs-up">
              <span></span>
              <%= @recruit.favorites.length %>
            </div>
          <% end %>
        <% end %>
      </div>
      <div class="row g-0">
        <div class="col-md-8">
          <div class="card-body">
            <p class="card-name">募集者：<%= @recruit.owner.name %></h5>
            <p class="card-text">ご指名：<%= @recruit.assigne.nil? ? "なし" : @recruit.assigne.name%></p>
            <p class="card-text">一言：<%= @recruit.content %></p>
            <p class="card-text">期日：<%= @recruit.end_on.strftime("%Y年%-m月%-d日 %-H時%-M分") %></p>
            <p class="card-text">ステータス：<%= @recruit.status_i18n %></p>
            <div class="recruit-links">
              <%= link_to '一覧へ戻る', recruits_path, class: 'btn btn-outline-secondary' %>
              <% if @recruit.owner_id == current_user.id %>
                <%= link_to '編集', edit_recruit_path(@recruit), class: 'btn btn-outline-success' %>
                <%= link_to 'アサイン',  assign_recruit_path(@recruit), class: 'btn btn-outline-primary' %>
              <% end %>
            </div>
          </div>
        </div>
        <div class="col-md-4 image_box">
          <%= image_tag(@recruit.icon.variant(gravity: :center, resize:"130x130^", crop:"130x130+0+0").processed, style: "margin: auto;") if @recruit.icon.attached? %>
        </div>
      </div>
    </div>
  <% elsif %>
    <div class="card border-danger mt-5 col-sm-12 col-lg-8" style="padding: 0">
      <div class="card-header bg-danger bg-gradient bg-opacity-25 fw-bolder fs-4 flexcard">
        <%= @recruit.shop %>
        <% if !Favorite.exists?(user: current_user, recruit_id: @recruit.id) %>
          <%= link_to favorites_path(@recruit), method: :post, class: "favorite-btn favorite-recruit" do %>
            <div class="i far fa-thumbs-up">
              <span></span>
              <%= @recruit.favorites.length %>
            </div>
          <% end %>
        <% else %>
          <%= link_to favorite_path(@recruit), method: :delete, class: "favorite-btn favorite-delete" do %>
            <div class="i far fa-thumbs-up">
              <span></span>
              <%= @recruit.favorites.length %>
            </div>
          <% end %>
        <% end %>
      </div>
      <div class="row g-0">
        <div class="col-md-8">
          <div class="card-body">
            <p class="card-name">募集者：<%= @recruit.owner.name %></h5>
            <p class="card-text">ご指名：<%= @recruit.assigne.nil? ? "なし" : @recruit.assigne.name%></p>
            <p class="card-text">一言：<%= @recruit.content %></p>
            <p class="card-text">期日：<%= @recruit.end_on.strftime("%Y年%-m月%-d日 %-H時%-M分") %></p>
            <p class="card-text">ステータス：<%= @recruit.status_i18n %></p>
            <div class="recruit-links">
              <%= link_to '一覧へ戻る', recruits_path, class: 'btn btn-outline-secondary' %>
              <% if @recruit.owner_id == current_user.id %>
                <%= link_to '編集', edit_recruit_path(@recruit), class: 'btn btn-outline-success' %>
                <%= link_to 'アサイン',  assign_recruit_path(@recruit), class: 'btn btn-outline-primary' %>
              <% end %>
            </div>
          </div>
        </div>
        <div class="col-md-4 image_box">
          <%= image_tag(@recruit.icon.variant(gravity: :center, resize:"130x130^", crop:"130x130+0+0").processed, style: "margin: auto;") if @recruit.icon.attached? %>
        </div>
      </div>
    </div>
  <% end %>
</div>