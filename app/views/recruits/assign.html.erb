<h2>ランチ募集のご指名</h2>
<div class="row justify-content-evenly">
  <div class="col-sm-12 col-lg-6">
    <%= form_with(model: @recruit) do |form| %>
      <% if @recruit.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@recruit.errors.count, "error") %> prohibited this recruit from being saved:</h2>

          <ul>
            <% @recruit.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="field">
        <p>現在のご指名</p>
        <%= @recruit.assigne.nil? ? "なし" : @recruit.assigne.name%>
      </div>
      <br />

      <div class="field">
        <p>ご指名の変更</p>
        <%= form.collection_select :assigne_id, User.all, :id, :name , include_blank: "-- 選択して下さい --" , class: 'col-md-9' %>
      </div>
      
      <br />
      <div class="actions">
        <%= form.submit :ご指名する, class: 'btn btn-outline-primary' %>
      </div>
    <% end %>
  </div>
  <div class="card border-success mt-4 col-sm-12 col-lg-6" style="padding: 0">
    <div class="card-header bg-success bg-gradient bg-opacity-25 fw-bolder fs-4"><%= @recruit.shop %></div>
    <div class="row g-0">
      <div class="col-md-8">
        <div class="card-body">
          <p class="card-name">募集者：<%= @recruit.owner.name %></h5>
          <p class="card-text">一言：<%= @recruit.content %></p>
          <p class="card-text">期日：<%= @recruit.end_on.strftime("%Y年%-m月%-d日 %-H時%-M分") %></p>
          <p class="card-text">ステータス：<%= @recruit.status_i18n %></p>
          <div class="recruit-links">
            <%= link_to 'Show', recruit_path(@recruit), class: 'btn btn-outline-secondary' %>
            <%= link_to 'Edit', edit_recruit_path(@recruit), class: 'btn btn-outline-success' %>
            <%= link_to 'Destroy', @recruit, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-danger' %>
          </div>
        </div>
      </div>
      <div class="col-md-4 image_box">
        <%= image_tag(@recruit.icon.variant(gravity: :center, resize:"130x130^", crop:"130x130+0+0").processed, style: "margin: auto;") if @recruit.icon.attached? %>
      </div>
    </div>
  </div>
</div>